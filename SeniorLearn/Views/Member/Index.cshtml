@model IEnumerable<SeniorLearn.Models.Member>

@{
    ViewData["Title"] = "Members";
}

<h1>Members</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Membership Start</th>
            <th>Renewal Date</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FirstName @item.LastName</td>
                <td>@item.Email</td>
                <td>@item.MembershipStartDate.ToShortDateString()</td>
                <td>@item.MembershipRenewalDate.ToShortDateString()</td>
                <td>
                    @string.Join(", ", item.MemberRoles.Where(r => r.IsActive).Select(r => r.Role.RoleName))
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>